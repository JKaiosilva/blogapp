<h1>{{categoria.nome}}</h1>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body mt-2">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}" <button class="btn btn-success">Leai Mais</button></a>
        <hr>
        <small>Categoria: {{categoria.nome}}</small>
        <br>
        <small>Data de Publicação{{data}}</small>
    </div>
</div>
{{else}}
    <h5>Nenhuma Postagem</h5>
{{/each}}